<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="blpaczka" translate="label" type="text" sortOrder="330" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>BLPaczka</label>
            <tab>sales</tab>
            <resource>BLPaczka_MagentoIntegration::admin</resource>

            <group id="default_shipping_details" translate="label" type="text" sortOrder="-10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Default Shipping Details</label>
                <field id="type" translate="label" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Type</label>
                    <source_model>BLPaczka\MagentoIntegration\Block\Adminhtml\Form\Field\ShipmentType</source_model>
                </field>
                <field id="weight" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Weight</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
                <field id="length" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Length</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
                <field id="width" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Width</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
                <field id="height" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Height</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
                <field id="content" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Content</label>
                </field>
                <field id="insurancetotal" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Insurance Total</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
                <field id="cashondeliverytotal" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Cash On Delivery Total</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="sortable" translate="label" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Sortable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="withoutcourierpickup" translate="label" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Without Courier Pick Up</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="courierarrivalday" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Courier Arrival in (days)</label>
                    <comment>The default courier arrival date will be the date the form was opened + the number of days set in this field.</comment>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>
                <field id="courierarrivaltimefrom" translate="label" type="time" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Courier Arrival Time From</label>
                </field>
                <field id="courierarrivaltimeto" translate="label" type="time" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Courier Arrival Time To</label>
                </field>
            </group>
            <group id="default_sender" translate="label" type="text" sortOrder="-10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Default Sender</label>
                <field id="fullname" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Full Name</label>
                    <validate>required-entry</validate>
                </field>
                <field id="company" translate="label" type="text" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Company</label>
                </field>
                <field id="email" translate="label" type="text" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Email</label>
                    <validate>required-entry validate-email</validate>
                </field>
                <field id="street" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Street</label>
                    <validate>required-entry</validate>
                </field>
                <field id="housenumber" translate="label" type="text" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>House Number</label>
                    <validate>required-entry</validate>
                </field>
                <field id="apartmentnumber" translate="label" type="text" sortOrder="220" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Apartment Number</label>
                </field>
                <field id="postcode" translate="label" type="text" sortOrder="230" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Post Code</label>
                    <validate>required-entry</validate>
                </field>
                <field id="city" translate="label" type="text" sortOrder="240" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>City</label>
                    <validate>required-entry</validate>
                </field>
                <field id="phonenumber" translate="label" type="text" sortOrder="240" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Phone Number</label>
                    <validate>required-entry</validate>
                </field>
            </group>
            <group id="default_payment" translate="label" type="text" sortOrder="-10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Default Payment</label>
                <field id="type" translate="label" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Type</label>
                    <source_model>BLPaczka\MagentoIntegration\Block\Adminhtml\Form\Field\PaymentType</source_model>
                </field>
            </group>
        </section>
        <section id="carriers">
            <group id="blpaczka" translate="label" type="text" sortOrder="-10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>BLPaczka</label>
                <frontend_model>BLPaczka\MagentoIntegration\Block\Adminhtml\System\Config\Fieldset\BLPaczka</frontend_model>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title</label>
                    <validate>required-entry</validate>
                </field>
                <field id="mode" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Mode</label>
                    <source_model>BLPaczka\MagentoIntegration\Model\Config\Source\ModeSelect</source_model>
                    <validate>required-entry</validate>
                </field>
                <field id="connect_button" translate="label" type="button" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Connection</label>
                    <frontend_model>BLPaczka\MagentoIntegration\Block\Adminhtml\System\Config\Field\ConnectionForm</frontend_model>
                </field>
                <field id="sandbox_email" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Sandbox Login</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="carriers/blpaczka/mode">sandbox</field>
                    </depends>
                </field>
                <field id="sandbox_api_key" translate="label" type="obscure" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Sandbox Api Key</label>
                    <validate>required-entry</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="carriers/blpaczka/mode">sandbox</field>
                    </depends>
                </field>
                <field id="production_email" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Production Login</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="carriers/blpaczka/mode">production_mode</field>
                    </depends>
                </field>
                <field id="production_api_key" translate="label" type="obscure" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Production Api Key</label>
                    <validate>required-entry</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="carriers/blpaczka/mode">production_mode</field>
                    </depends>
                </field>
                <field id="name" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title in the Checkout</label>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Sort Order</label>
                    <validate>validate-number</validate>
                </field>
                <field id="shipping_cost" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Couriers Default Cost</label>
                    <validate>required-entry validate-number validate-zero-or-greater</validate>
                </field>
                <field id="sallowspecific" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Ship to Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="showmethod" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Show Method if not applicable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <frontend_class>shipping-skip-hide</frontend_class>
                </field>
                <field id="couriers_config" translate="label" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Couriers Config</label>
                    <comment>The "PUDO" option will only be considered for couriers that allow you to select a delivery point.</comment>
                    <frontend_model>BLPaczka\MagentoIntegration\Block\Adminhtml\Form\Field\CouriersConfig</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>
