<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="print_shipping_label_blpaczka_a4">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isBLPaczkaFile" xsi:type="boolean">true</item>
                        <item name="blpaczkaDownloadUrl" xsi:type="string">blpaczka/order_shipment/massPrintShippingLabelA4</item>
                        <item name="blpaczkaValidationUrl" xsi:type="string">blpaczka/order_shipment/massPrintShippingLabelA4Validation</item>
                    </item>
                </argument>
                <settings>
                    <url path="blpaczka/order_shipment/massPrintShippingLabelA4"/>
                    <type>print_shipping_label_blpaczka_a4</type>
                    <label translate="true">Print BLPaczka Shipping Labels A4</label>
                </settings>
            </action>
            <action name="print_shipping_label_blpaczka_a6">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isBLPaczkaFile" xsi:type="boolean">true</item>
                        <item name="blpaczkaDownloadUrl" xsi:type="string">blpaczka/order_shipment/massPrintShippingLabelA6</item>
                        <item name="blpaczkaValidationUrl" xsi:type="string">blpaczka/order_shipment/massPrintShippingLabelA6Validation</item>
                    </item>
                </argument>
                <settings>
                    <url path="blpaczka/order_shipment/massPrintShippingLabelA6"/>
                    <type>print_shipping_label_blpaczka_a6</type>
                    <label translate="true">Print BLPaczka Shipping Labels A6</label>
                </settings>
            </action>
            <action name="create_blpaczka_order">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isBLPaczkaLink" xsi:type="boolean">true</item>
                    </item>
                </argument>
                <settings>
                    <url path="blpaczka/order_shipment/massCreateBLPaczkaOrder"/>
                    <type>create_blpaczka_order</type>
                    <label translate="true">Order BLPaczka Shipments</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="blpaczka" class="BLPaczka\MagentoIntegration\Block\Adminhtml\Ui\Component\Grid\Column\BLPaczka">
            <settings>
                <filter>text</filter>
                <visible>true</visible>
                <label translate="true">BLPaczka</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
            </settings>
        </column>
    </columns>
</listing>
